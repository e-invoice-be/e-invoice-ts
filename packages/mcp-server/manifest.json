{
  "dxt_version": "0.1",
  "name": "e-invoice-api-mcp",
  "version": "1.9.0",
  "description": "The official MCP Server for the E Invoice API",
  "author": {
    "name": "E Invoice",
    "email": "support@e-invoice.be"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/e-invoice-be/e-invoice-ts.git"
  },
  "homepage": "https://github.com/e-invoice-be/e-invoice-ts/tree/main/packages/mcp-server#readme",
  "documentation": "https://api.e-invoice.be",
  "server": {
    "type": "node",
    "entry_point": "${__dirname}/index.js",
    "mcp_config": {
      "command": "node",
      "args": ["${__dirname}/index.js"],
      "env": {
        "E_INVOICE_API_KEY": "${user_config.E_INVOICE_API_KEY}"
      }
    }
  },
  "user_config": {
    "E_INVOICE_API_KEY": {
      "title": "api_key",
      "description": "",
      "required": true,
      "type": "string"
    }
  },
  "tools_generated": true,
  "compatibility": {
    "runtimes": {
      "node": ">=18.0.0"
    }
  },
  "keywords": ["api"]
}
